{
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
    "strings": true
  },
  "tailwindCSS.experimental.configFile": "tailwind.config.ts",
  "tailwindCSS.experimental.classRegex": [
    ["ui:\\s*{([^)]*)\\s*}", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["/\\*\\s?ui\\s?\\*/\\s*{([^;]*)}", ":\\s*[\"'`]([^\"'`]*).*?[\"'`]"]
  ],
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "ngClass",
    "ui",
    "active-class",
    "inactive-class"
  ],
  "github.copilot.chat.experimental.codeGeneration.instructions": [
    { 
      "text": 
      "This is a Nuxt project. Use Vue 3 Composition API with TypeScript for the templating and the scripting. You can use VueUse utilities too. Use Nuxt UI and Tailwind for the design."
    }
  ],
  "cSpell.words": [
    "emailjs",
    "frite",
    "grecaptcha",
    "heroicons"
  ],
}
